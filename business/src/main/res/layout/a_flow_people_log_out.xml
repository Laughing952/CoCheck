<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="content"
            type="java.lang.String"/>

        <variable
            name="click"
            type="android.view.View.OnClickListener"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="203dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivFlowPeopleManagementDetailsImg"
                            android:layout_width="83dp"
                            android:layout_height="83dp"
                            android:layout_marginBottom="21dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/iv_flow_people_photo_default"
                            />

                        <TextView
                            android:id="@+id/tv_flow_people_log_out_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="17dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </RelativeLayout>
                <View
                    style="@style/style_flow_people_8_dp_height_split_line"></View>
                <LinearLayout
                    style="@style/style_flow_people_ll_style">

                    <TextView
                        style="@style/style_flow_people_title"
                        android:text="流动信息"/>

                </LinearLayout>

                <View
                    style="@style/style_flow_people_1_ps_line_grey_no_margin"/>

                <LinearLayout
                    style="@style/style_flow_people_query_detail_title_ll">

                    <TextView
                        style="@style/style_flow_people_query_detail_title_tv"
                        android:layout_marginLeft="12dp"
                        android:text="流入日期"
                        />

                    <TextView
                        style="@style/style_flow_people_query_detail_title_tv"
                        android:text="拟居住时间"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/style_flow_people_query_detail_data_ll">

                    <TextView
                        android:id="@+id/tv_flow_people_log_out_income_date"
                        style="@style/style_flow_people_query_detail_data_tv"
                        android:layout_marginLeft="12dp"
                        />

                    <TextView
                        android:id="@+id/tv_flow_people_log_out_stay_time"
                        style="@style/style_flow_people_query_detail_data_tv"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/style_flow_people_query_detail_title_ll">

                    <TextView
                        style="@style/style_flow_people_query_detail_title_tv"
                        android:layout_marginLeft="12dp"
                        android:text="暂居住处所"
                        />

                    <TextView
                        style="@style/style_flow_people_query_detail_title_tv"
                        android:text="暂居住事由"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/style_flow_people_query_detail_data_ll">

                    <TextView
                        android:id="@+id/tv_flow_people_log_out_temp_house"
                        style="@style/style_flow_people_query_detail_data_tv"
                        android:layout_marginLeft="12dp"
                        />

                    <TextView
                        android:id="@+id/tv_flow_people_log_out_stay_reason"
                        style="@style/style_flow_people_query_detail_data_tv"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/style_flow_people_query_detail_title_ll">

                    <TextView
                        style="@style/style_flow_people_query_detail_title_tv"
                        android:layout_marginLeft="12dp"
                        android:text="从事职业"
                        />

                    <TextView
                        style="@style/style_flow_people_query_detail_title_tv"
                        android:text="登记日期"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/style_flow_people_query_detail_data_ll">

                    <TextView
                        android:id="@+id/tv_flow_people_log_out_job"
                        style="@style/style_flow_people_query_detail_data_tv"
                        android:layout_marginLeft="12dp"
                        />

                    <TextView
                        android:id="@+id/tv_flow_people_log_out_register_date"
                        style="@style/style_flow_people_query_detail_data_tv"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_vertical"
                    android:text="暂（居）住省市区县"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_flow_people_log_out_detail_address_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_vertical"
                    android:text="赞（居）住详细地址"
                    android:textColor="#999999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_flow_people_log_out_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>

                <View
                    style="@style/style_flow_people_1_ps_line_grey_no_margin"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_flow_people_log_out_log_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:text="注销"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>

    </RelativeLayout>
</layout>


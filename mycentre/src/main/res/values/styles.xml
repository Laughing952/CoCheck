<resources>

    <!--通用的行高的样式-->
    <style name="style_common_line_style">

        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <!--宽，高,内容包裹，样式-->
    <style name="style_width_height_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--宽，高匹配父布局，样式-->
    <style name="style_width_height_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--用户个人信息item图片样式-->
    <style name="style_image_view_user_info">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>

    </style>

    <!--用户个人信息item编辑框样式-->
    <style name="style_edit_text_user_info" parent="style_width_height_match_parent">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/color_main_text_light_black</item>
        <item name="android:textColorHint">@color/color_main_text_light_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--设置中：使用说明中的 小标题样式-->
    <style name="style_read_me_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">17sp</item>
    </style>
    <!--设置中：使用说明中的 小标题的内容样式-->
    <style name="style_read_me_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
